{
  "compilerOptions": {
    "baseUrl":".",
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "paths": {
    "@modules/*": ["./app/modules/*"],
    "@config/*": ["./config/*"],
    "@shared/*": ["./app/shared/*"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude" : [
    "src/**/*.spec.ts"
  ]
}
